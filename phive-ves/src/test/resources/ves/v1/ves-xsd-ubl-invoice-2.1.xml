<ves xmlns="urn:com:helger:phive:ves:v1.0-new">
  <groupId>org.oasis-open.ubl</groupId>
  <artifactId>invoice</artifactId>
  <version>2.1</version>
  
  <name>OASIS UBL 2.1 Invoice</name>
  
  <xsd>
    <resource>
      <groupId>org.oasis-open</groupId>
      <artifactId>ubl</artifactId>
      <version>2.1</version>
      <classifier>zip</classifier>
    </resource>
    <!-- when resource is ZIP, main is needed -->
    <main>xsdrt/maindoc/UBL-Invoice-2.1.xsd</main>
    <catalog>
      <!-- 
PUBLIC "http://www.w3.org/2000/09/xmldsig#" "maven:com.helger.xsd:ph-xsds-xmldsig:jar::!/schemas/xmldsig-core-schema.xsd"
       -->
      <public uri="http://www.w3.org/2000/09/xmldsig#">
        <resource>
          <groupId>org.w3</groupId>
          <artifactId>xmldsig-core</artifactId>
          <version>1.0</version>
          <classifier>xsd</classifier>
        </resource>
      </public>
<!-- 
REWRITE_SYSTEM "StandardBusinessDocumentHeader.xsd" "maven:com.helger:ph-sbdh:jar::!/schemas/sbdh/StandardBusinessDocumentHeader.xsd"
 -->        
      <system id="StandardBusinessDocumentHeader.xsd">
        <resource>
          <groupId>org.gs1</groupId>
          <artifactId>sbdh</artifactId>
          <version>1.2</version>
          <classifier>xsd</classifier>
        </resource>
      </system>
    </catalog>
    <namespaces>
      <namespace prefix="" uri="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2" />
      <namespace prefix="xsi" uri="http://www.w3.org/2001/XMLSchema-instance" />
      <namespace prefix="xs" uri="http://www.w3.org/2001/XMLSchema" />
      <namespace prefix="cac" uri="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2" />
      <namespace prefix="cbc" uri="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2" />
      <namespace prefix="cec" uri="urn:oasis:names:specification:ubl:schema:xsd:CommonExtensionComponents-2" />
      <namespace prefix="ds" uri="http://www.w3.org/2000/09/xmldsig#" />
    </namespaces>
    <!-- 
    <precondition type="xpath">count(/Invoice/cec:UBLExtensions/cec:UBLExtension/cec:ExtensionContent/ds:Signature)</precondition>
     -->
  </xsd>
</ves>
